{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"sourceMap": true,
		"outDir": "built/cjs",
		"declaration": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"strict": true,
		"strictPropertyInitialization": false,
		"strictNullChecks": false
	},
	"exclude": [
		"node_modules",
		"built",
		"specs",
		"example",
		"playground.*"
	]
}